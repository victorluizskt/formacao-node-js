<%- include('../../components/header.ejs') %>
<%- include('../../components/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Articles</h2>
    <a class="btn btn-success" href="/admin/articles/new">Create new article</a>
    <hr>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article => { %>
                <tr>
                    <td><%= article.id %></td>
                    <td><%= article.title %></td>
                    <td><%= article.slug %></td>
                    <td><%= article.categoria.title %></td>
                    <td>
                        <form method="POST" action="/articles/delete" style="display: inline;" onsubmit="sendDelete(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %>">
                            <button class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</div>


<script>
    function sendDelete(event, form){
        event.preventDefault();
        const decision = confirm("Do you want to delete this article?");
        if(decision){
            form.submit();
        }
    }
</script>

